<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Battleship">
    <TextView
        android:id="@+id/TV"
        android:text="Морской бой"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="170dp"
        tools:ignore="MissingConstraints">
    </TextView>
    <Button
        android:id="@+id/BTcomputer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="играть против компьютера"
        android:layout_margin="90dp"
        app:layout_constraintTop_toBottomOf="@+id/TV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:layout_margin="50dp"
        android:id="@+id/BTplayer"
        android:text="играть против человека"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/BTcomputer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints">

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>